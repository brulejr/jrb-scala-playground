# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/						controllers.Application.index

# Things
GET		/api/things				controllers.Things.list
GET		/api/thing/$id<[\da-f]{8}-[\da-f]{4}-[\da-f]{4}-[\da-f]{4}-[\da-f]{12}>	controllers.Things.showById(id: java.util.UUID)
GET		/api/thing/:name		controllers.Things.showByName(name: String)
POST	/api/thing				controllers.Things.create
PUT		/api/thing/$id<[\da-f]{8}-[\da-f]{4}-[\da-f]{4}-[\da-f]{4}-[\da-f]{12}>	controllers.Things.update(id: java.util.UUID)

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file			controllers.Assets.at(path="/public", file)
